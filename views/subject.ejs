<!doctype html>
<html>
    <head>
        <meta charset = "utf-8">
        <title><%= pageTitle %></title>
        <link rel = "stylesheet" href = "/css/home.css">
        <link rel = "stylesheet" href = "/css/nav.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <%- include('./includes/navbar.ejs') %>
        <div class = container>
            <h1 class = "title"><%=pageTitle%></h1>
            <div class = "form-width">
                <% if (pageTitle === "Add subject") { %>
                    <form action = "/add-subject" method = "post">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Title</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name = "title">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                            <textarea class="form-control" name = "desc" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <button type = "submit" class = "btn btn-outline-info">Create new subject</button>
                    </form>
                <% } else { %>
                    <form action = "/subject/edit/<%= curSub %>" method = "post">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Title</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name = "title">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                            <textarea class="form-control" name = "desc" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <button type = "submit" class = "btn btn-outline-info">Update</button>
                    </form>
                    <br>
                    <form action = "/subject/delete/<%= curSub %>" method = "post">
                        <button type = "submit" class = "btn btn-outline-info">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>