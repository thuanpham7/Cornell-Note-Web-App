<!doctype html>
<html lang ="en">
    <head>
        <meta charset = "utf-8">
        <title><%= pageTitle %></title>
        <link rel = "stylesheet" href = "/css/home.css">
        <link rel = "stylesheet" href = "/css/nav.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <%- include('./includes/navbar.ejs') %>
        <div class = container>
            <h1 class = "title">Welcome <%= user.username %></h1>
            <% if (user.subject.length !== 0) { %>
                <div class="grid">
                    <% for (let sub of user.subject) { %>
                        <a href = "/subject/<%= sub.title %>">
                        <article class="card subject-item">
                            <header class="card__header">
                                <h1 class="subject__title"><%= sub.title %></h1>
                            </header>
                            <div class="card__image">
                                <img src="edu.jpeg">
                            </div>
                        </a>
                            <div class="card__content">
                                <p class="subject__date"><%= sub.date %></h2>
                                <p class="subject__description"><%= sub.desc %></p>
                            </div>
                            <form action = "/subject/edit/<%= sub.title %>" method = "get">
                                <intput type = "hidden" name = "subName" value = "sub.title"></intput>
                                <button type = "submit" class = "btn btn-outline-info">Edit Subject</button>
                            </form>
                        </article>
                    <% } %>
                <% } %>
                </div>

            <form action = "/add-subject" method = "get">
                <button type = "submit" class = "btn btn-outline-info">Create new subject</button>
            </form>
        </div>
        
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>